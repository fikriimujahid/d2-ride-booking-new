# ================================================================================
# GENERAL CONFIGURATION
# ================================================================================

# --------------------------------------------------------------------------------
# ENVIRONMENT NAME
# --------------------------------------------------------------------------------
environment = "dev"

# --------------------------------------------------------------------------------
# PROJECT NAME
# --------------------------------------------------------------------------------
project_name = "d2-ride-booking"

# ================================================================================
# AWS CONFIGURATION
# ================================================================================

# --------------------------------------------------------------------------------
# AWS REGION
# --------------------------------------------------------------------------------
aws_region = "ap-southeast-1"

# --------------------------------------------------------------------------------
# AVAILABILITY ZONE
# --------------------------------------------------------------------------------
availability_zone           = "ap-southeast-1a"
availability_zone_secondary = "ap-southeast-1b"

# ================================================================================
# VPC CONFIGURATION
# ================================================================================
# Network layout and IP addressing

# --------------------------------------------------------------------------------
# VPC CIDR BLOCK
# --------------------------------------------------------------------------------
vpc_cidr = "10.20.0.0/16"

# --------------------------------------------------------------------------------
# PUBLIC SUBNET CIDR
# --------------------------------------------------------------------------------
public_subnet_cidr = "10.20.1.0/24"

# --------------------------------------------------------------------------------
# PRIVATE SUBNET CIDR
# --------------------------------------------------------------------------------
private_subnet_cidr           = "10.20.11.0/24"
private_subnet_cidr_secondary = "10.20.12.0/24"

# --------------------------------------------------------------------------------
# NAT GATEWAY TOGGLE
# --------------------------------------------------------------------------------
enable_nat_gateway = false

# ================================================================================
# COGNITO CONFIGURATION (PHASE 3)
# ================================================================================
# User authentication settings

# --------------------------------------------------------------------------------
# DOMAIN NAME
# --------------------------------------------------------------------------------
domain_name = "d2.fikri.dev"

# --------------------------------------------------------------------------------
# PASSWORD MINIMUM LENGTH
# --------------------------------------------------------------------------------
cognito_password_min_length = 8 # DEV: 8 chars (PROD should use 12+)

# ================================================================================
# IAM CONFIGURATION (PHASE 3)
# ================================================================================

# --------------------------------------------------------------------------------
# SECRETS MANAGER ARNs
# --------------------------------------------------------------------------------
secrets_manager_arns = []

# ================================================================================
# RDS CONFIGURATION (PHASE 4)
# ================================================================================
# MySQL database settings

# --------------------------------------------------------------------------------
# ENABLE RDS
# --------------------------------------------------------------------------------
enable_rds = true

# --------------------------------------------------------------------------------
# DATABASE NAME
# --------------------------------------------------------------------------------
db_name = "ridebooking"

# --------------------------------------------------------------------------------
# MASTER USERNAME
# --------------------------------------------------------------------------------
db_master_username = "admin"

# --------------------------------------------------------------------------------
# APP DATABASE USER
# --------------------------------------------------------------------------------
rds_db_user = "app_user"

# --------------------------------------------------------------------------------
# INSTANCE CLASS
# --------------------------------------------------------------------------------
rds_instance_class = "db.t3.micro" # DEV: smallest instance

# --------------------------------------------------------------------------------
# STORAGE SIZE
# --------------------------------------------------------------------------------
rds_allocated_storage = 20 # GB - will autoscale if needed

# --------------------------------------------------------------------------------
# MYSQL VERSION
# --------------------------------------------------------------------------------
rds_engine_version = "8.0"

# ================================================================================
# RESOURCE TAGS
# ================================================================================
tags = {
  Environment = "dev"             # dev/staging/prod
  Project     = "d2-ride-booking" # Project identifier
  ManagedBy   = "terraform"       # How this was created
  Domain      = "d2.fikri.dev"    # Associated domain
}
